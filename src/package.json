{
  "name": "projecthub",
  "version": "1.0.0",
  "description": "A platform for sourcing and managing industry projects and partner companies",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "api": "next dev --turbo",
    "db:push": "prisma db push",
    "db:generate": "prisma generate",
    "db:studio": "prisma studio",
    "db:migrate": "prisma migrate dev",
    "db:reset": "prisma migrate reset",
    "schema:generate": "node scripts/generate-schema.js generate",
    "schema:sync": "npm run schema:generate && npm run db:generate && npm run db:push",
    "concept:sync": "npm run schema:sync",
    "validate": "tsx lib/engine/validation/cli.ts validate",
    "validate:ai": "tsx lib/engine/validation/cli.ts validate --ai",
    "validate:html": "tsx lib/engine/validation/cli.ts validate --format html",
    "validate:init": "tsx lib/engine/validation/cli.ts init"
  },
  "dependencies": {
    "@prisma/client": "^6.13.0",
    "@types/nodemailer": "^6.4.17",
    "better-auth": "^1.3.4",
    "commander": "^11.1.0",
    "llamaindex": "^0.11.26",
    "next": "^15.0.0",
    "nodemailer": "^7.0.5",
    "openai": "^4.104.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^5.3.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "autoprefixer": "^10.4.0",
    "eslint": "^8.55.0",
    "eslint-config-next": "^15.0.0",
    "postcss": "^8.4.0",
    "prisma": "^6.13.0",
    "tailwindcss": "^3.4.0",
    "tsx": "^4.20.3"
  }
}
