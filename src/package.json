    "openai": "^4.104.0",
    "path-to-regexp": "^8.2.0",
    "postcss": "^8.5.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^4.1.11",
    "typescript": "^5.3.0",
    "uuid": "^11.1.0"
